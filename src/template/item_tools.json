{
    "type": "carousel",
    "contents": [
        {
            "type": "bubble",
            "styles": {
                "header": {
                    "backgroundColor": "${backgroundColorHeader}"
                },
                "body": {
                    "backgroundColor": "${backgroundColorBody}"
                }
            },
            "header": {
                "type": "box",
                "layout": "vertical",
                "spacing": "md",
                "contents": [
                    {
                        "type": "box",
                        "layout": "horizontal",
                        "contents": [
                            {
                                "type": "image",
                                "url": "${ filenameUrl }",
                                "size": "md",
                                "flex": 2,
                                "action": {
                                    "type": "postback",
                                    "label": "fig",
                                    "data": "${ imagePostback }"
                                }
                            },
                            {
                                "type": "box",
                                "layout": "vertical",
                                "flex": 3,
                                "margin": "lg",
                                "contents": [
                                    {
                                        "type": "text",
                                        "text": "${ name_c }",
                                        "size": "lg",
                                        "wrap": true
                                    },
                                    {
                                        "type": "text",
                                        "text": "${ name_j }",
                                        "wrap": true
                                    },
                                    {
                                        "type": "text",
                                        "text": "${ name_e }",
                                        "wrap": true
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            "body": {
                "type": "box",
                "layout": "vertical",
                "spacing": "md",
                "contents": [
                    {
                        "type": "box",
                        "layout": "horizontal",
                        "contents": [
                            {
                                "type": "box",
                                "layout": "vertical",
                                "contents": [
                                    {
                                        "type": "text",
                                        "text": "買價",
                                        "align": "center",
                                        "size": "lg",
                                        "wrap": true
                                    },
                                    {
                                        "type": "text",
                                        "text": "${buy}",
                                        "align": "center",
                                        "wrap": true
                                    }
                                ]
                            },
                            {
                                "type": "box",
                                "layout": "vertical",
                                "contents": [
                                    {
                                        "type": "text",
                                        "text": "賣價",
                                        "align": "center",
                                        "size": "lg",
                                        "wrap": true
                                    },
                                    {
                                        "type": "text",
                                        "text": "${sell}",
                                        "align": "center",
                                        "wrap": true
                                    }
                                ]
                            },
                            {
                                "type": "box",
                                "layout": "vertical",
                                "contents": [
                                    {
                                        "type": "text",
                                        "text": "使用次數",
                                        "align": "center",
                                        "size": "lg",
                                        "wrap": true
                                    },
                                    {
                                        "type": "text",
                                        "text": "${uses}",
                                        "align": "center",
                                        "wrap": true
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "separator"
                    },
                    {
                        "type": "box",
                        "layout": "horizontal",
                        "contents": [
                            {
                                "type": "box",
                                "layout": "vertical",
                                "contents": [
                                    {
                                        "type": "text",
                                        "text": "取得方式",
                                        "align": "center",
                                        "size": "lg",
                                        "wrap": true
                                    },
                                    {
                                        "type": "text",
                                        "text": "${obtainedFrom}",
                                        "align": "center",
                                        "size": "sm",
                                        "wrap": true,
                                        "action": {
                                            "type": "message",
                                            "text": "取得方式 ${obtainedFrom}"
                                        },
                                        "color": "${blue}"
                                    }
                                ]
                            },
                            {
                                "type": "box",
                                "layout": "vertical",
                                "contents": [
                                    {
                                        "type": "text",
                                        "text": "取得說明",
                                        "align": "center",
                                        "size": "lg",
                                        "wrap": true
                                    },
                                    {
                                        "type": "text",
                                        "text": "${sourceNotes}",
                                        "align": "center",
                                        "size": "sm",
                                        "wrap": true
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        }
    ]
}