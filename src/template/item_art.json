{
    "type": "bubble",
    "styles": {
        "header": {
            "backgroundColor": "#F2F5EA"
        },
        "body": {
            "backgroundColor": "#FFFFFF"
        }
    },
    "header": {
        "type": "box",
        "layout": "vertical",
        "spacing": "md",
        "contents": [
            {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                    {
                        "type": "image",
                        "url": "[[realArtImage]]",
                        "size": "5xl",
                        "action": {
                            "type": "postback",
                            "label": "fig",
                            "data": "type=fig&name=${item.name_c}&fileName=${filename_temp}"
                        }
                    },
                    {
                        "type": "box",
                        "layout": "vertical",
                        "margin": "lg",
                        "contents": [
                            {
                                "type": "text",
                                "text": "[[name_c]]",
                                "size": "lg",
                                "wrap": true
                            },
                            {
                                "type": "text",
                                "text": "The Hunters in The Snow",
                                "wrap": true,
                                "action": {
                                    "type": "postback",
                                    "label": "fig",
                                    "data": "type=fig&name=雪中的獵人&fileName=https://upload.wikimedia.org/wikipedia/commons/d/d8/Pieter_Bruegel_the_Elder_-_Hunters_in_the_Snow_%28Winter%29_-_Google_Art_Project.jpg"
                                }
                            },
                            {
                                "type": "text",
                                "text": "雪中的獵人",
                                "wrap": true,
                                "action": {
                                    "type": "postback",
                                    "label": "fig",
                                    "data": "type=fig&name=雪中的獵人&fileName=https://upload.wikimedia.org/wikipedia/commons/d/d8/Pieter_Bruegel_the_Elder_-_Hunters_in_the_Snow_%28Winter%29_-_Google_Art_Project.jpg"
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "body": {
        "type": "box",
        "layout": "vertical",
        "spacing": "md",
        "contents": [
            {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "text",
                                "text": "真品",
                                "align": "center",
                                "size": "sm",
                                "wrap": true
                            },
                            {
                                "type": "image",
                                "url": "https://acnhcdn.com/latest/FtrIcon/FtrArtHunterSnow.png",
                                "size": "5xl",
                                "action": {
                                    "type": "postback",
                                    "label": "fig",
                                    "data": "type=fig&name=${item.name_c}&fileName=${filename_temp}"
                                }
                            }
                        ]
                    },
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "text",
                                "text": "贗品",
                                "align": "center",
                                "size": "sm",
                                "wrap": true
                            },
                            {
                                "type": "image",
                                "url": "https://acnhcdn.com/latest/FtrIcon/FtrArtHunterSnow.png",
                                "size": "5xl",
                                "action": {
                                    "type": "postback",
                                    "label": "fig",
                                    "data": "type=fig&name=${item.name_c}&fileName=${filename_temp}"
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "type": "separator"
            },
            {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "text",
                                "text": "作品資訊",
                                "align": "center",
                                "size": "sm",
                                "wrap": true
                            },
                            {
                                "type": "text",
                                "text": "[[artist]]",
                                "align": "center",
                                "wrap": true
                            }
                        ]
                    }
                ]
            },
            {
                "type": "separator"
            },
            {
                "type": "box",
                "layout": "horizontal",
                "contents": [
                    {
                        "type": "box",
                        "layout": "vertical",
                        "contents": [
                            {
                                "type": "text",
                                "text": "作品描述",
                                "align": "center",
                                "size": "sm",
                                "wrap": true
                            },
                            {
                                "type": "text",
                                "text": "[[museumDescription]]",
                                "align": "center",
                                "size": "sm",
                                "wrap": true
                            }
                        ]
                    }
                ]
            }
        ]
    }
}